<%= form_for [@post, @review] do |f| %>
  <div class="reviews__new__main">
    <%= f.label :評価, style: { 'margin-right' => 8 } %>
    <%= f.number_field :rate, placeholder: '評価', value: 1, max: 5, min: 1, html: { style: 'text-align: right;' } ,class: "rate"%>
    <br>
    <%= flash[:notice] %>
    <%= f.text_area :review, placeholder: 'レビューを書いてね！' %>
    <br>
    <%= button_tag type: "submit", class: "btn" do %>
    投稿する<i class="icon-arrow-right"></i>
    <% end %>
  </div>
  <% end %>

