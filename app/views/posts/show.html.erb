  <div class="show_main">
  <h1 class="show_title"><%= @post.name %></h1>
  <div class="content_post" style="background-image: url(<%= @post.image %>);">
  </div>
  <a href="/reviews/new?post_id=<%= @post.id %> "class="review_link">この作品をレビューする</a>
 

  <ul style="padding: 0" class="show__main">
                <% @post.reviews.each do |review| %>
                <li style="border-bottom: dotted 1px">
                  <div class="thumbnail__caption">
                    <h3 class="text-xsmall text-overflow" title="<%= review.nickname %>">
                      <%= review.nickname %>
                    </h3>
                    <p class="text-small">
                      <span class="rating-star"><i class="star-actived rate-[ここに評価を表示]0"></i></span>
                    </p>
                    <p>
                      <%= review.review %>
                    </p>
                  </div>
                </li>
                <% end %>
              </ul>
  
